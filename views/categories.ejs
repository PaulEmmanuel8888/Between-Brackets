<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../views/partials/head.ejs') %>
  </head>
  <body>
    <script defer>
      function handleClick(event) {
        const categoryDiv = event.target.closest(".category");
        if (!categoryDiv) return;

        const categoryName = categoryDiv.getAttribute("name");

        window.location.href = `/category/${categoryName}`;
      }
    </script>

    <%- include('../views/partials/header.ejs') %>
    <h1 class="category-heading">Let's Dive In</h1>
    <div class="container main">
      <div class="col">
        <div class="categories">
          <div
            class="post category"
            name="javascript"
            onclick="handleClick(event)"
          >
            <img
              src="/images/javascript.png"
              alt="JavaScript Image"
              class="post-img"
            />

            <div class="category-info">
              <h2>JavaScript</h2>
              <p>
                Master the language of the web, from basics to advanced tricks.
              </p>
            </div>
          </div>
          <div
            class="post category"
            name="css-design"
            onclick="handleClick(event)"
          >
            <img
              src="/images/css.png"
              alt="CSS Image"
              class="post-img"
              class="post-img"
            />

            <div class="category-info">
              <h2>CSS & Design</h2>
              <p>Create beautiful, responsive layouts and user interfaces.</p>
            </div>
          </div>
          <div class="post category" name="nodejs" onclick="handleClick(event)">
            <img
              src="/images/nodejs.png"
              alt="JavaScript Image"
              class="post-img"
            />

            <div class="category-info">
              <h2>Node.js</h2>
              <p>Learn server-side JavaScript and build powerful backends.</p>
            </div>
          </div>
        </div>
      </div>

      <div class="col">
        <div class="categories">
          <div
            class="post category"
            name="databases"
            onclick="handleClick(event)"
          >
            <img
              src="/images/database.png"
              alt="Databases Image"
              class="post-img"
            />

            <div class="category-info">
              <h2>Databases</h2>
              <p>Store, query, and optimize your data like a pro.</p>
            </div>
          </div>
          <div
            class="post category"
            name="productivity"
            onclick="handleClick(event)"
          >
            <img
              src="/images/productivity.png"
              alt="JavaScript Image"
              class="post-img"
            />

            <div class="category-info">
              <h2>Productivity</h2>
              <p>Boost your workflow and get more done every day.</p>
            </div>
          </div>
          <div
            class="post category"
            name="tutorials"
            onclick="handleClick(event)"
          >
            <img
              src="/images/tutorials.png"
              alt="JavaScript Image"
              class="post-img"
            />

            <div class="category-info">
              <h2>Tutorials</h2>
              <p>Step-by-step guides to help you learn and practice fast.</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%- include('../views/partials/footer.ejs') %>
  </body>
</html>
