<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head.ejs') %>
  </head>
  <body>
    <div class="image-container">
      <h1>Image Finder</h1>
      <div id="toast-container"></div>

      <form id="search-form">
        <input type="text" id="search-box" placeholder="Search..." />
        <button>
          <img
            class="search-icon"
            src="/images/search-icon.svg"
            alt="Search Button"
          />
        </button>
      </form>
      <!-- From Uiverse.io by Li-Deheng -->
      <div class="loader" id="loader">
        <div class="circle">
          <div class="dot"></div>
          <div class="outline"></div>
        </div>
        <div class="circle">
          <div class="dot"></div>
          <div class="outline"></div>
        </div>
        <div class="circle">
          <div class="dot"></div>
          <div class="outline"></div>
        </div>
        <div class="circle">
          <div class="dot"></div>
          <div class="outline"></div>
        </div>
      </div>
      <div id="search-result"></div>
      <button id="show-more-btn">Show More</button>

      <footer id="footer">Pictures from Unsplash.com</footer>
    </div>
    <script src="/js/image-finder.js" defer></script>
  </body>
</html>
